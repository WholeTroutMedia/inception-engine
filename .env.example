# Brainchild V4 - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# AI PROVIDERS
# ============================================

# Anthropic (Primary)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (Secondary)
OPENAI_API_KEY=your_openai_api_key_here

# Preferred provider (anthropic or openai)
AI_PROVIDER=anthropic

# ============================================
# DATABASE
# ============================================

# PostgreSQL (Long-term memory / Neocortex)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=brainchild
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=brainchild_v4
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# CACHE
# ============================================

# Redis (Working memory / Hippocampus)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================
# SYSTEM CONFIGURATION
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# ============================================
# MODE CONFIGURATION
# ============================================

# Default mode settings
DEFAULT_SHIP_SPEED=balanced  # fast, balanced, or careful
DEFAULT_WORKFLOW=full        # express, rapid, or full

# Enable/disable modes
ENABLE_IDEATE=true
ENABLE_PLAN=true
ENABLE_SHIP=true
ENABLE_VALIDATE=true

# ============================================
# AGENT CONFIGURATION
# ============================================

# Agent activation
LOAD_ALL_AGENTS_ON_START=true
MAX_CONCURRENT_AGENTS=10

# Validator agents
VALIDATOR_SENTINEL_ENABLED=true
VALIDATOR_PATTERNS_ENABLED=true
VALIDATOR_LOGIC_ENABLED=true
VALIDATOR_COVERAGE_ENABLED=true

# ============================================
# CONSTITUTIONAL SETTINGS
# ============================================

# Enforcement level (strict, moderate, lenient)
CONSTITUTIONAL_ENFORCEMENT=strict

# Require 100% compliance
REQUIRE_FULL_COMPLIANCE=true

# Auto-block violations
AUTO_BLOCK_VIOLATIONS=true

# ============================================
# MONITORING
# ============================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# ============================================
# GITHUB INTEGRATION
# ============================================

# GitHub MCP (for repo operations)
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=WholeTroutMedia
GITHUB_REPO=brainchild-v4

# ============================================
# DEPLOYMENT
# ============================================

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=wholetroutmedia/brainchild-v4

# Kubernetes
K8S_NAMESPACE=brainchild
K8S_CLUSTER=production

# ============================================
# SECURITY
# ============================================

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# API Keys
API_KEY_HEADER=X-API-Key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# FEATURES
# ============================================

# Enable experimental features
ENABLE_EXPERIMENTAL=false

# Enable debug mode
DEBUG=false

# Enable telemetry
ENABLE_TELEMETRY=true
